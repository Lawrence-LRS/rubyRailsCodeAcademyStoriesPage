<div class="new-main">
  <div class="row">
    <div class="container">
      
      <h1>Here so you can relive your memories</h1>
      
      <div class='forum'>
      <%= form_for(@signup) do |f| %>
      <%= f.text_field :firstname, :placeholder => "Insert First name" %>
      <%= f.email_field :email, :placeholder => "Insert Email" %>
      <%= f.submit "Add to mailing list", class: "btn btn-submit" %>
      <% end %>
      </div>
      
    </div>
  </div>
</div>